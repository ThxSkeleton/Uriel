		<Program Id="OpenGL.FontPatch">
			<Object Path="OpenGL.Objects.Shaders.Font.Vertex.FontPatch.glsl" Stage="VertexShader" />
			<Object Path="OpenGL.Objects.Shaders.Font.Fragment.FontPatch.glsl" Stage="FragmentShader" />
			
