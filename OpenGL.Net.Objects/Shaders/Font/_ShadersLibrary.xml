		<Object Path="OpenGL.Objects.Shaders.Font.Fragment.FontPatch.glsl" TestStage="FragmentShader" />
		<Object Path="OpenGL.Objects.Shaders.Font.Vertex.FontTextureArray.glsl" TestStage="VertexShader" />
		<Object Path="OpenGL.Objects.Shaders.Font.Fragment.FontTextureArray.glsl" TestStage="FragmentShader" />
