          <Symbol>GLO_INSTANCED</Symbol>
        </Symbols>
      </Object>
      <Object Path="OpenGL.Objects.Shaders.Font.Fragment.FontTextureArray.glsl" Stage="FragmentShader" />

      <Attribute Name="glo_Position" Semantic="Position" Location="0" />

      <Uniform Name="glo_UniformColor" Semantic="Color"/>
    </Program>

		<!-- FontTextureArray+InstancedArrays -->
		<Program Id="OpenGL.FontTextureArray+InstancedArrays">
			<Object Path="OpenGL.Objects.Shaders.Font.Vertex.FontTextureArray.glsl" Stage="VertexShader">
        <Symbols>
          <Symbol>GLO_INSTANCED_ARRAY</Symbol>
        </Symbols>
      </Object>
			<Object Path="OpenGL.Objects.Shaders.Font.Fragment.FontTextureArray.glsl" Stage="FragmentShader" />
			
			<Attribute Name="glo_Position" Semantic="Position" Location="0" />

			<Uniform Name="glo_UniformColor" Semantic="Color"/>
		</Program>

	</Programs>

</ShadersLibrary>